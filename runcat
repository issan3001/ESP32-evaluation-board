// ================= flame =================
const unsigned char* frames[] = {
  epd_bitmap_run1,
  epd_bitmap_run2
};

int xPos = -CAT_W;
int frameIndex = 0;

void setup() {
  Wire.begin(21, 22);   // ESP32 I2C
  display.begin(SSD1306_SWITCHCAPVCC, OLED_ADDR);
  display.clearDisplay();
}

void loop() {
  display.clearDisplay();

  // gnd-pix
  display.drawBitmap(
    0,
    SCREEN_HEIGHT - GROUND_H,
    ground_bitmap,
    GROUND_W,
    GROUND_H,
    SSD1306_WHITE
  );

int catYOffset = -4;

display.drawBitmap(
  xPos,
  SCREEN_HEIGHT - GROUND_H - CAT_H - catYOffset,
  frames[frameIndex],
  CAT_W,
  CAT_H,
  SSD1306_WHITE
);
  display.display();

  frameIndex ^= 1;
  
  xPos += 4;
  if (xPos > SCREEN_WIDTH) {
    xPos = -CAT_W;
  }

  delay(80);
}
